# Ignore Drupal core and contributed modules/themes/libraries managed by Composer.
/core
/modules/contrib
/themes/contrib
/libraries
/profiles/contrib
/vendor

# Ignore Drupal configuration management files.
/sites/*/files
/sites/*/private
/sites/*/services.yml
/sites/*/settings.local.php
/sites/*/settings.php
/sites/*/settings.*.php

# Ignore Drupal's default public files directory.
/sites/default/files

# Ignore Drupal's default private files directory.
/sites/default/private

# Ignore Drupal's default translation files.
/sites/default/translations

# Ignore SimpleTest multi-site environment.
/sites/simpletest

# Ignore environment-specific files.
/.env
/.env.local
/.env.*.local

# Ignore backup files generated by IDEs and editors.
*.bak
*.swp
*.swo

# Ignore OS-specific files.
.DS_Store
Thumbs.db

# Ignore Composer files (if not managing dependencies via Git).
/composer.lock
/composer.phar

# Ignore npm/yarn dependencies (if using a front-end build tool).
/node_modules
/yarn.lock
/package-lock.json

# Ignore IDE-specific files.
/.idea
/.vscode
/.project
/.settings

# Ignore Drush backup files.
/drush-backups

# Ignore PHPUnit test output.
/phpunit.xml
/artifacts
/tests/results

# Ignore local development tools.
/.ddev
/.lando
/docker-compose.yml
/docker-compose.override.yml